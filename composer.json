{
    "name": "1sept/oauth2-1sept",
    "description": "September First OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Vasilyev",
            "email": "a.vasilyev@1sept.ru"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorization",
        "1sept"
    ],
    "require": {
        "php": "^8.3",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=3.86",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpdoc-parser": "^2.3.0",
        "phpstan/phpstan": "^2.1.29",
        "phpstan/phpstan-strict-rules": "^2.0.6",
        "phpunit/phpunit": "^12.3.14"
    },
    "autoload": {
        "psr-4": {
            "Sept\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sept\\OAuth2\\Client\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan"
        ],
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.dist.neon",
        "lint": "@cs-fixer-check",
        "lint-fix": "@cs-fixer-fix",
        "cs-fixer-check": [
            "@cs-fixer-install",
            "vendor/bin/php-cs-fixer check --allow-risky=yes --show-progress=dots --diff --verbose"
        ],
        "cs-fixer-fix": [
            "@cs-fixer-install",
            "vendor/bin/php-cs-fixer fix --allow-risky=yes --show-progress=dots --diff"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
